
    <style>
        .breadcrumb {
            display: flex;
            list-style: none;
            padding-top: 20px;
            margin: 0;
            background: #f8f9fa;
            border-radius: 4px;
        }

        .breadcrumb-item {
            margin-right: 5px;
            cursor: pointer;
        }

        .breadcrumb-item:hover {
            text-decoration: underline;
        }

        .breadcrumb-item:not(:last-child)::after {
            content: ' > ';
            padding-left: 5px;
            padding-right: 5px;
            color: #6c757d; /* 分隔符颜色 */
        }

        /* 模态窗口样式 */
        .modal {
            display: none; /* 默认隐藏 */
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgb(0,0,0);
            background-color: rgba(0,0,0,0.4); /* 黑色背景 */
            padding-top: 60px;
        }

        .modal-content {
            background-color: #fefefe;
            margin: 5% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }

        .toc {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .toc-item a {
            text-decoration: none;
            color: #007bff;
        }

        .toc-item a:hover {
            text-decoration: underline;
        }
    </style>

<nav aria-label="Breadcrumb">
    <ol class="breadcrumb" id="breadcrumb">
        <!-- 面包屑项将通过 JavaScript 自动生成 -->
    </ol>
</nav>

<!-- 模态窗口 -->
<div id="myModal" class="modal">
    <div class="modal-content">
        <span class="close" id="closeModal">&times;</span>
        <h2>TOC</h2>
        <ul id="tocList" class="toc">
            <!-- TOC 将通过 JavaScript 填充 -->
        </ul>
    </div>
</div>

<script>

    function generateBreadcrumb() {
        const breadcrumb = document.getElementById('breadcrumb');
        const pathParts = window.location.pathname.split('/').filter(part => part);

        // 创建面包屑项，忽略当前页面
        pathParts.forEach((part, index) => {
            const item = document.createElement('li');
            item.className = 'breadcrumb-item';
            const path = '/' + pathParts.slice(0, index + 1).join('/');

            // 绑定点击事件
            item.innerText = decodeURIComponent(part);
            item.onclick = () => showTOC(path); // 点击时显示 TOC
            breadcrumb.appendChild(item);
        });
    }

    function showTOC(path) {
        const tocList = document.getElementById('tocList');
        tocList.innerHTML = ''; // 清空当前 TOC

        const currentData = data[path];
        if (currentData && currentData.children) {
            for (const [childPath, name] of Object.entries(currentData.children)) {
                const tocItem = document.createElement('li');
                tocItem.className = 'toc-item';
                const link = document.createElement('a');
                link.href = childPath;
                link.innerText = name;
                tocItem.appendChild(link);
                tocList.appendChild(tocItem);
            }
            showModal(); // 显示模态窗口
        }
    }

    function showModal() {
        const modal = document.getElementById("myModal");
        modal.style.display = "block"; // 显示模态窗口
    }

    document.getElementById("closeModal").onclick = function() {
        const modal = document.getElementById("myModal");
        modal.style.display = "none"; // 关闭模态窗口
    }

    window.onclick = function(event) {
        const modal = document.getElementById("myModal");
        if (event.target == modal) {
            modal.style.display = "none"; // 点击窗口外部关闭模态窗口
        }
    }

    // 调用生成面包屑导航的函数
    generateBreadcrumb();
</script>

