
    <style>
        .human-date {
            margin: 0; /* 日期的外边距 */
            padding: 0; /* 日期的内边距 */
        }

        .breadcrumb {
            display: flex;
            list-style: none;
            padding: 5px 0; /* 小内边距 */
            margin: 5px 0; /* 与其他元素的外边距 */
            background: transparent; /* 背景设置为透明 */
            border-radius: 4px;
        }

        .breadcrumb-item {
            margin-right: 3px; /* 调整间隔，挨得近 */
            cursor: default; /* 鼠标指针变化 */
        }

        .breadcrumb-item::after {
            content: '>'; /* 使用 '>' 连接 */
            margin-left: 3px; /* 添加左侧间隔 */
            margin-right: 3px; /* 添加右侧间隔 */
            color: #6c757d; /* 分隔符颜色 */
        }

        .breadcrumb-item:last-child::after {
            content: ''; /* 最后一个面包屑不显示分隔符 */
        }
    </style>
<div class="human-date"></div>
<div id="breadcrumb-container">
    <ol class="breadcrumb" id="breadcrumb"></ol>
</div>

<script>
    // 自动生成面包屑导航
    function generateBreadcrumb() {
        const breadcrumb = document.getElementById('breadcrumb');
        const pathParts = window.location.pathname.split('/').filter(part => part);
        let currentPath = '';

        // 创建面包屑项
        pathParts.forEach((part, index) => {
            currentPath += '/' + part; // 持续构建当前路径
            const item = document.createElement('li');
            item.className = 'breadcrumb-item';
            item.innerText = decodeURIComponent(part);

            // 点击面包屑项
            item.onclick = (e) => {
                e.stopPropagation(); // 阻止事件冒泡
                // 添加逻辑：如果需要可以在这里为每个面包屑项加载相应内容
            };

            breadcrumb.appendChild(item);
        });

        // 添加当前页作为最后一项
        const currentItem = document.createElement('li');
        currentItem.className = 'breadcrumb-item';
        currentItem.innerText = decodeURIComponent(pathParts[pathParts.length - 1] || '首页');
        breadcrumb.appendChild(currentItem);
    }

    // 调用生成面包屑导航的函数
    generateBreadcrumb();
</script>

