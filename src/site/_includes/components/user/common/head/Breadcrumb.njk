
    <style>
        .breadcrumb {
            display: flex;
            list-style: none;
            padding-top: 60px;
            margin: 0;
            background: #f8f9fa;
            border-radius: 4px;
        }

        .breadcrumb-item {
            margin-right: 5px;
        }

        .breadcrumb-item a {
            text-decoration: none;
            color: #007bff;
        }

        .breadcrumb-item a:hover {
            text-decoration: underline;
        }

        .breadcrumb-item.active {
            color: #6c757d;
        }

        .breadcrumb-item:not(:last-child)::after {
            content: ' > '; /* 使用 > 作为分隔符 */
            padding-left: 5px;
            padding-right: 5px;
            color: #6c757d; /* 分隔符颜色 */
        }
    </style>
</head>
<body>

<nav aria-label="Breadcrumb">
    <ol class="breadcrumb" id="breadcrumb">
        <!-- 面包屑项将通过 JavaScript 自动生成 -->
    </ol>
</nav>

<script>
    // 自动生成面包屑导航
    function generateBreadcrumb() {
        const breadcrumb = document.getElementById('breadcrumb');
        const pathParts = window.location.pathname.split('/').filter(part => part);

        // 创建首页链接
        const homeItem = document.createElement('li');
        homeItem.className = 'breadcrumb-item';
        const homeLink = document.createElement('span'); // 改为 span，点击时不跳转
        homeLink.innerText = '首页'; // 可根据需要修改
        homeItem.appendChild(homeLink);
        breadcrumb.appendChild(homeItem);

        // 添加路径中的每个部分
        pathParts.forEach((part, index) => {
            const item = document.createElement('li');
            item.className = 'breadcrumb-item';

            const link = document.createElement('span'); // 改为 span，点击时不跳转
            link.innerText = decodeURIComponent(part); // 解码 URL 组件
            
            item.appendChild(link);
            breadcrumb.appendChild(item);
        });

        // 创建当前页面项
        const activeItem = document.createElement('li');
        activeItem.className = 'breadcrumb-item active';
        activeItem.innerText = decodeURIComponent(pathParts[pathParts.length - 1] || '首页');
        breadcrumb.appendChild(activeItem);
    }

    // 调用生成面包屑导航的函数
    generateBreadcrumb();
</script>
