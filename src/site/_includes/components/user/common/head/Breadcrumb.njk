
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        .breadcrumb {
            display: flex;
            list-style: none;
            padding: 10px 0;
            margin: 60px 0 0 0; /* 顶部 60px，左右 和下方 0px */
            background: #f8f9fa;
            border-radius: 4px;
        }

        .breadcrumb-item {
            margin-right: 5px;
            cursor: pointer;
            position: relative; /* 相对定位，供 tooltip 使用 */
        }

        .breadcrumb-item:hover {
            text-decoration: underline;
        }

        .breadcrumb-item:not(:last-child)::after {
            content: ' > ';
            padding-left: 5px;
            padding-right: 5px;
            color: #6c757d; /* 分隔符颜色 */
        }

        /* tooltip 样式 */
        .tooltip {
            display: none; /* 默认隐藏 */
            position: absolute; /* 绝对定位 */
            background-color: #fff;
            border: 1px solid #ccc;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            padding: 10px;
            z-index: 1000; /* 提升层级 */
            width: 200px; /* 调整宽度 */
            border-radius: 4px;
        }

        .breadcrumb-item:hover .tooltip {
            display: block; /* 悬停时显示 tooltip */
        }

        .toc {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .toc-item a {
            text-decoration: none;
            color: #007bff;
        }

        .toc-item a:hover {
            text-decoration: underline;
        }
    </style>


<nav aria-label="Breadcrumb">
    <ol class="breadcrumb" id="breadcrumb">
        <!-- 面包屑项将通过 JavaScript 自动生成 -->
    </ol>
</nav>

<script>

    function generateBreadcrumb() {
        const breadcrumb = document.getElementById('breadcrumb');
        const pathParts = window.location.pathname.split('/').filter(part => part);

        // 创建面包屑项，忽略当前页面
        pathParts.forEach((part, index) => {
            const item = document.createElement('li');
            item.className = 'breadcrumb-item';
            const path = '/' + pathParts.slice(0, index + 1).join('/');

            // 绑定 tooltip
            const tooltip = document.createElement('div');
            tooltip.className = 'tooltip';
            tooltip.innerHTML = generateTOC(path); // 填充 TOC 列表

            // 绑定点击事件
            item.innerText = decodeURIComponent(part);
            item.appendChild(tooltip);
            breadcrumb.appendChild(item);
        });
    }

    function generateTOC(path) {
        const currentData = data[path];
        let tocHTML = '';

        if (currentData && currentData.children) {
            tocHTML += '<ul class="toc">';
            for (const [childPath, name] of Object.entries(currentData.children)) {
                tocHTML += `<li class="toc-item"><a href="${childPath}">${name}</a></li>`;
            }
            tocHTML += '</ul>';
        } else {
            tocHTML += '<p>没有下一级链接</p>'; // 如果没有子链接
        }

        return tocHTML; // 返回生成的 TOC HTML
    }

    // 调用生成面包屑导航的函数
    generateBreadcrumb();
</script>
