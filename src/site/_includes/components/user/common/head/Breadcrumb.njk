
    <style>
        .breadcrumb {
            display: flex;
            list-style: none;
            padding-top: 20px;
            margin: 0;
            background: #f8f9fa;
            border-radius: 4px;
        }

        .breadcrumb-item {
            margin-right: 5px;
            cursor: pointer; /* 鼠标指针为手形 */
        }

        .breadcrumb-item:hover {
            text-decoration: underline;
        }

        .toc {
            display: none; /* 默认隐藏 TOC */
            list-style: none;
            padding: 10px 0;
            margin-top: 10px;
            background: #e9ecef;
            border-radius: 4px;
        }

        .toc-item a {
            text-decoration: none;
            color: #007bff;
        }

        .toc-item a:hover {
            text-decoration: underline;
        }
    </style>


<nav aria-label="Breadcrumb">
    <ol class="breadcrumb" id="breadcrumb">
        <!-- 面包屑项将通过 JavaScript 自动生成 -->
    </ol>
</nav>

<div id="tocContainer"></div> <!-- TOC 容器 -->

<script>

    function generateBreadcrumb() {
        const breadcrumb = document.getElementById('breadcrumb');
        const pathParts = window.location.pathname.split('/').filter(part => part);

        // 创建面包屑项，忽略当前页面
        pathParts.forEach((part, index) => {
            const item = document.createElement('li');
            item.className = 'breadcrumb-item';
            const path = '/' + pathParts.slice(0, index + 1).join('/');

            // 绑定点击事件
            item.innerText = decodeURIComponent(part);
            item.onclick = () => showTOC(path); // 点击时显示 TOC
            breadcrumb.appendChild(item);
        });
    }

    function showTOC(path) {
        const tocContainer = document.getElementById('tocContainer');
        tocContainer.innerHTML = ''; // 清空当前 TOC

        const currentData = data[path];
        if (currentData && currentData.children) {
            const toc = document.createElement('ul');
            toc.className = 'toc';

            for (const [childPath, name] of Object.entries(currentData.children)) {
                const tocItem = document.createElement('li');
                tocItem.className = 'toc-item';
                const link = document.createElement('a');
                link.href = childPath;
                link.innerText = name;
                tocItem.appendChild(link);
                toc.appendChild(tocItem);
            }

            tocContainer.appendChild(toc);
            toc.style.display = 'block'; // 显示 TOC
        }
    }

    // 调用生成面包屑导航的函数
    generateBreadcrumb();
</script>

