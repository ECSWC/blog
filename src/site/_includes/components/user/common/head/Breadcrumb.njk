
    <style>
        

        .breadcrumb {
            display: flex;
            list-style: none;
            padding: 3px 0;
            margin: 60px 0 0 0; /* 顶部 60px，左右 和下方 0px */
            background: #f8f9fa;
            border-radius: 4px;
            flex-wrap: wrap;
        }

        .breadcrumb-item {
            margin-right: 3px; /* 调整间隔 */
            cursor: default; /* 禁止鼠标指针变化 */
            position: relative; /* 用于定位下拉内容 */
        }

        .breadcrumb-item:hover {
            text-decoration: underline; /* 悬停时下划线 */
        }

        .breadcrumb-item:not(:last-child)::after {
            content: '>'; /* 使用 '>' 连接 */
            margin-left: 3px; /* 添加左侧间隔 */
            margin-right: 3px; /* 添加右侧间隔 */
            color: #6c757d; /* 分隔符颜色 */
        }

        .expanded-content {
            display: none; /* 默认隐藏内容 */
            background: #e9ecef; /* 背景颜色 */
            padding: 3px;
            border-radius: 4px;
            margin-top: 3px; /* 与面包屑项目的距离 */
            width: 100%; /* 宽度为 100% */
        }

        .link {
            display: block; /* 使链接为块级元素 */
            text-decoration: none;
            color: #007bff;
            margin: 3px 0; /* 调整链接间距 */
        }

        .link:hover {
            text-decoration: underline; /* 鼠标悬停时下划线 */
        }
    </style>

<div id="breadcrumb-container">
    <ol class="breadcrumb" id="breadcrumb">
        <!-- 面包屑项将通过 JavaScript 自动生成 -->
    </ol>
</div>

<script>

    function generateBreadcrumb() {
        const breadcrumb = document.getElementById('breadcrumb');
        const pathParts = window.location.pathname.split('/').filter(part => part);
        let currentPath = '';

        // 创建面包屑项，忽略当前页面
        pathParts.forEach((part, index) => {
            currentPath += '/' + part; // 持续构建当前路径
            const item = document.createElement('li');
            item.className = 'breadcrumb-item';
            item.innerText = decodeURIComponent(part);
            
            // 点击面包屑不会跳转，只是展开下一级菜单
            item.onclick = (e) => {
                e.stopPropagation(); // 阻止事件冒泡
                toggleContent(currentPath, item); // 切换内容显示
            };

            breadcrumb.appendChild(item);
        });
    }

    function toggleContent(path, item) {
        let content = item.querySelector('.expanded-content');
        if (!content) {
            // 创建展开内容
            content = document.createElement('div');
            content.className = 'expanded-content';
            const currentData = data[path];

            if (currentData && currentData.children) {
                for (const [childPath, name] of Object.entries(currentData.children)) {
                    const link = document.createElement('a');
                    link.href = childPath; // 此处保持链接，方便点击
                    link.className = 'link';
                    link.innerText = name;
                    content.appendChild(link);
                }
            } else {
                content.innerText = '没有下一级链接';
            }
            item.appendChild(content);
        }

        // 切换显示状态
        content.style.display = content.style.display === 'block' ? 'none' : 'block';
    }

    // 调用生成面包屑导航的函数
    generateBreadcrumb();
</script>
