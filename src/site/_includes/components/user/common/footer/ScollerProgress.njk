<a id="button-BackToTop"></a>
<script>
var btn = $('#button-BackToTop');
$(window).scroll(function() {
  if ($(window).scrollTop() > 300) {
    btn.addClass('show');
  } else {
    btn.removeClass('show');
  }
});
btn.on('click', function(e) {
  e.preventDefault();
  $('html, body, main').animate({scrollTop:0}, '300');
});
</script>
  

