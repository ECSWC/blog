<a href="#" 
    class="scrollbutton" 
    id="scrollbuttonid">
    Scroll to Top
</a>
<script>
// script.js
let mysBtn = document
    .getElementById('scrollbuttonid');
window.addEventListener('scroll', function () {
    if (document.main.scrollTop > 20
        || document.documentElement.scrollTop > 20) {
        mysBtn.style.display = 'block';
    } else {
        mysBtn.style.display = 'none';
    }
});
</script>
