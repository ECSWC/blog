        .toc {
            list-style-type: none;                /* 去掉列表标记 */
            padding-left: 0;                      /* 不需要左边距 */
            margin: 0;                            /* 去掉外边距 */
        }

        .toc a {
            color: black;                         /* 字体颜色 */
            text-decoration: none;                /* 去掉下划线 */
            overflow: hidden;                     /* 隐藏溢出文本 */
            white-space: nowrap;                  /* 不换行 */
            text-overflow: ellipsis;              /* 字符溢出用…表示 */
        }

        .toc-container ul {
            margin-left: 15px;                   /* 只在每个项左边增加外边距以缩进 */
        }

        .toc-container ul li h2,
        .toc-container ul li h3,
        .toc-container ul li h4 {
            margin-left: 15px;                   /* h2/h3/h4 相对父级缩进 */
        }

        .toc-button {
            position: fixed;                     /* 固定定位 */
            top: 50%;                            /* 垂直居中 */
            right: 15px;                         /* 距离右侧 15px */
            transform: translateY(-50%);        /* 垂直居中修正 */
            z-index: 1001;                       /* 确保按钮在上面 */
            width: 50px;                         /* 按钮宽度 */
            height: 50px;                        /* 按钮高度 */
            background: white;                   /* 按钮背景 */
            border-radius: 50%;                  /* 圆形按钮 */
            border: none;                        /* 无边框 */
            cursor: pointer;                     /* 鼠标手势 */
            display: flex;                       /* 使用flex布局 */
            align-items: center;                 /* 垂直居中 */
