<title>AI写作助手</title>
    <script>
        async function generateText() {
            const userInput = document.getElementById('userInput').value;
            const response = await fetch('https://api.openai.com/v1/engines/davinci-codex/completions', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': 'sk-houkgi1dGcCqmenoAU4CAgrxNtlLExZsZq1qevNVwoB55gyU', // 替换为您的API密钥
                },
                body: JSON.stringify({
                    prompt: userInput,
                    max_tokens: 100
                })
            });
            const data = await response.json();
            document.getElementById('result').innerText = data.choices[0].text;
        }
    </script>
<h1>AI写作助手</h1>
<textarea id="userInput" rows="4" cols="50" placeholder="输入您的内容..."></textarea><br>
<button onclick="generateText()">生成文本</button>
<h2>生成的文本：</h2>
<p id="result"></p>
