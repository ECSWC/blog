<title>AI写作助手</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }
        h1 {
            text-align: center;
            color: #333;
        }
        textarea {
            width: 100%;
            height: 100px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            resize: none;
        }
        button {
            display: block;
            width: 100%;
            padding: 10px;
            margin-top: 10px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }
        button:hover {
            background-color: #218838;
        }
        h2 {
            margin-top: 20px;
            color: #333;
        }
        #result {
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 4px;
            padding: 10px;
            margin-top: 10px;
            white-space: pre-wrap; /* 保持换行 */
        }
    </style>
    <script>
        async function generateText() {
            const userInput = document.getElementById('userInput').value;
            const response = await fetch('https://api.openai.com/v1/engines/davinci-codex/completions', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': 'Bearer app-RZaVY9eRrikN3qbzC524BOn9' // 替换为您的API密钥
                },
                body: JSON.stringify({
                    prompt: userInput,
                    max_tokens: 100
                })
            });

            if (!response.ok) {
                const errorData = await response.json();
                document.getElementById('result').innerText = "错误: " + errorData.error.message;
                return;
            }

            const data = await response.json();
            document.getElementById('result').innerText = data.choices[0].text;
        }
    </script>
<h1>AI写作助手</h1>
<textarea id="userInput" placeholder="输入您的内容..."></textarea>
<button onclick="generateText()">生成文本</button>
<h2>生成的文本：</h2>
<div id="result"></div>
